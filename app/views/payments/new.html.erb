<div id="category-list">
  <div class="navbar-new"
      <h2 class="page-title">Add New Transaction</h2>
      <div id="back-button">
        <%= link_to category_payments_path, class: 'back-icon' do %>
        <%= image_tag("back.png", class: "hamburger-menu", id: "hamburger-icon") %>
        <% end %>
      </div>
  </div>

</div>

<div>
  
    <%= form_with(model: @payment, url: category_payments_path, class: "form-category") do |f| %>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Transaction name", class: 'field-1' %>
      </div>
  
      <div class="field">
        <%= f.label :amount %>
        <%= f.text_field :amount, autofocus: true, autocomplete: "amount", placeholder: "0.00", class: 'field-1' %>
      </div>
  
      <div class="checkbox">
        <%= f.label :categories, class: "label-1" %><br />
        <%= f.collection_check_boxes :category_ids, current_user.categories, :id, :name, include_hidden: false %>
        <%= link_to "Add a new category", new_category_path, data: { turbo: false }, class: "btn-1"  %>
      </div>
  
      <div class="footer2">
        <%= f.submit "ADD", class: "btn" %>
      </div>
    <% end %>

</div>
  